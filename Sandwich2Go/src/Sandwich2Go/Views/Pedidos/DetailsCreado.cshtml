@model Sandwich2Go.Models.PedidoSandwichPersonalizadoViewModels.PedidoDetailsSandwichPersonalizadoViewModel

@{
    ViewData["Title"] = "Detalles del Pedido";
}

<h1>Detalles del pedido:</h1>

<div>
    <h4>
        Fecha del pedido:
        @Html.DisplayFor(model => model.nombrePedido)
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.clienteNombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.clienteNombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.clienteApellidos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.clienteApellidos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.metodoPago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.metodoPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.direccionEntrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.direccionEntrega)
        </dd>

    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Ingredientes
                </th>
                <th>
                    Precio
                </th>
                <th>
                    Cantidad
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.sandwichesPedidos.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => Model.sandwichesPedidos[i].nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(m => Model.sandwichesPedidos[i].Ingredientes)
                    </td>
                    <td>
                        @Html.DisplayFor(m => Model.sandwichesPedidos[i].precio)
                    </td>
                    <td>
                        @Html.DisplayFor(m => Model.sandwichesPedidos[i].cantidad)
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
    <br />
    <div>
        <h6>
            @Html.DisplayNameFor(m => Model.precioTotal)
            @Html.DisplayFor(m=>Model.precioTotal)
        </h6>

    </div>
    <br />
</div>
<div>
    <a asp-action="Index">Volver a tus pedidos</a>
</div>
